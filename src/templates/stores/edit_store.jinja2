{% extends "base.jinja2" %}

{% block content %}
    <div class="page-header">
        <h1>Create store</h1>
        <div class="form-size">
            <form method="post" action="{{ url_for('stores.edit_store', store_id=store._id) }}">
                <div class="form-group">
                    <label for="name"> Store Name </label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Store Name" value="{{ store.name }}">
                </div>
                <div class="form-group">
                    <label for="url_prefix"> URL Prefix </label>
                    <input type="url" class="form-control" id="url_prefix" name="url_prefix" placeholder="wwww.name.com"
                    value="https://{{ store.url_prefix }}">
                </div>
                <div class="form-group">
                    <label for="tag_name"> Tag Name </label>
                    <input type="text" class="form-control" id="tag_name" name="tag_name" placeholder="tag name"
                           value="{{ store.tag_name }}">
                </div>
                <div class="form-group">
                    <label for="query"> Query </label>
                    <input type="text" class="form-control" id="query" name="query" placeholder="query"
                    value='{{ store.query | tojson }}'>
                </div>
                <button class="btn btn-success">Update</button>
            </form>
        </div>
    </div>


{% endblock %}