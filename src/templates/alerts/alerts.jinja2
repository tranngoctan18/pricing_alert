{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1> Alert
            <small> for {{ alert.item.name }} </small>
        </h1>
    </div>
    <p>Last price found <strong> {{ "{0:,}".format(alert.item.price) }} <small>â‚«</small></strong></p>
    <p>Last checked on <strong> {{ moment(alert.last_checked).format("LLL") }}</strong></p>
    <div class="panel panel-default">
        <div class="panel-body">
            <a class="btn btn-default" href="{{ alert.item.url }}" role="button"> Visit site </a>
        <a class="btn btn-warning" href="{{ url_for('alerts.edit_alert', alert_id=alert._id) }}"> Edit </a>
            {% if alert.active %}
                <a class="btn btn-danger" href="{{ url_for('alerts.deactivate_alert', alert_id=alert._id) }}"
                   role="button"> Deactivate alert </a>
            {% else %}
                <a class="btn btn-success" href="{{ url_for('alerts.activate_alert', alert_id=alert._id) }}"
                   role="button"> Activate alert </a>
                <a class="btn btn-danger" href="{{ url_for('alerts.delete_alert', alert_id=alert._id) }}"
                   role="button"> Permanently delete alert </a>
            {% endif %}

            <a class="btn btn-warning" href="{{ url_for('alerts.check_alert_price', alert_id=alert._id) }}"
                 role="button">
                Check alert price
            </a>
        </div>
    </div>
{% endblock %}

