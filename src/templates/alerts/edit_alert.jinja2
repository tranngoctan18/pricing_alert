{% extends "base.jinja2" %}

{% block content %}
    <div class="page-header"> Edit alert</div>
    <div class="form-size">
        <div class="form-size">
            <form method="post" action="{{ url_for('alerts.edit_alert', alert_id=alert._id) }}">
                <div class="form-group">
                    <label for="item_name"> Alert name </label>
                    <input type="text" class="form-control" id="item_name" name="item_name"
                           value="{{ alert.item.name }}">
                </div>
                <div class="form-group">
                    <label for="alert_item_url"> Alert item's URL </label>
                    <input type="text" class="form-control" id="alert_item_url" name="alert_item_url" disabled
                           value="{{ alert.item.url }}">
                </div>
                <div class="form-group">
                    <label for="price_limit"> Price limit </label>
                    <input type="number" class="form-control" id="price_limit" name="price_limit"
                           value="{{ alert.item.price }}" >
                </div>
                <button class="btn btn-success">Update alert</button>
            </form>
        </div>
    </div>


    <form cla></form>
    </div>
{% endblock %}